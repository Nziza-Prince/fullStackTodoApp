{
    "version": 2,
    "builds": [
      {
        "src": "server/**/*.js",
        "use": "@vercel/node"
      },
      {
        "src": "myTodoApp/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "client/build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/server/api/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/client/$1"
      }
    ]
  }
  